<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaoyb.dao.DepartmentMapper">
	<resultMap id="BaseResultMap" type="department">
		<id column="dep_id" jdbcType="INTEGER" property="depId" />
		<result column="dep_name" jdbcType="VARCHAR" property="depName" />
	</resultMap>
	<sql id="Base_Column_List">
		dep_id, dep_name
	</sql>
	<!-- 查询所有的部门 -->
	<select id="selectAllEmp" resultMap="department">
		select
		<include refid="Base_Column_List" />
		from department
	</select>
	<select id="selectByPrimaryKey" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from department
		where dep_id = #{depId,jdbcType=INTEGER}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from
		department
		where dep_id = #{depId,jdbcType=INTEGER}
	</delete>
	<insert id="insert" parameterType="department">
		insert into department
		(dep_id, dep_name)
		values (#{depId,jdbcType=INTEGER},
		#{depName,jdbcType=VARCHAR})
	</insert>
	<insert id="insertSelective" parameterType="department">
		insert into department
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="depId != null">
				dep_id,
			</if>
			<if test="depName != null">
				dep_name,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="depId != null">
				#{depId,jdbcType=INTEGER},
			</if>
			<if test="depName != null">
				#{depName,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="department">
		update department
		<set>
			<if test="depName != null">
				dep_name = #{depName,jdbcType=VARCHAR},
			</if>
		</set>
		where dep_id = #{depId,jdbcType=INTEGER}
	</update>
	<update id="updateByPrimaryKey" parameterType="department">
		update department
		set dep_name = #{depName,jdbcType=VARCHAR}
		where dep_id =
		#{depId,jdbcType=INTEGER}
	</update>
